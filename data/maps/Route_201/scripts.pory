    applymovement(Rival, Movement_Rival_Almost_Walk_In_Grass)
    waitmovement(0)
    msgbox(Route_201_Text_Rowan_Says_Hold, MSGBOX_SIGN)
    playse(SE_PIN)
    applymovement(5, Common_Movement_ExclamationMark)
    waitmovement(0)
    applymovement(Rival, Common_Movement_Delay48)
    waitmovement(0)
    playbgm(MUS_DP_ROWAN, FALSE)
    addobject(Rowan)
    applymovement(Rowan, Movement_Rowan_Walks_In)
    applymovement(Rival, Movement_Face_Left)
    waitmovement(0)
    applymovement(OBJ_EVENT_ID_PLAYER, Movement_Face_Left)
    waitmovement(0)
    msgbox(Route_201_Text_Rowan_Tells_We_Are_Fools, MSGBOX_SIGN)
