script Route_201_EventScript_After_Picking_Starter
{
    applymovement(Rowan, Movement_Face_Down)
    applymovement(OBJ_EVENT_ID_PLAYER, Movement_Face_Up)
    waitmovement(0)
    switch (var(VAR_STARTER_MON))
    {
        case 0: goto(Route_201_EventScript_You_Picked_Turtwig)
        case 1: goto(Route_201_EventScript_You_Picked_Chimchar)
        case 2: goto(Route_201_EventScript_You_Picked_Piplup)
    }
}

