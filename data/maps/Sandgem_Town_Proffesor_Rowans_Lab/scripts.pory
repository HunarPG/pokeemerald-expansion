    end()
}

script Sandgem_Town_Proffesor_Rowans_Lab_EventScript_Reached_First_Time_Event
{
    checkplayergender()
    goto_if_eq(VAR_RESULT, MALE, Sandgem_Town_Proffesor_Rowans_Lab_EventScript_Dawn_Do_Script)
    goto_if_eq(VAR_RESULT, FEMALE, Sandgem_Town_Proffesor_Rowans_Lab_EventScript_Lucas_Do_Script)    
}

script Sandgem_Town_Proffesor_Rowans_Lab_EventScript_Dawn_Do_Script
{
    applymovement(Dawn, Common_Movement_Delay32)
    waitmovement(0)
    applymovement(Dawn, Sandgem_Town_Proffesor_Rowans_Lab_Movement_Rival_Goes_Near_Rowan)
    applymovement(OBJ_EVENT_ID_PLAYER, Sandgem_Town_Proffesor_Rowans_Lab_Movement_Player_Goes_Near_Rowan)
    waitmovement(0)
    switch (var(VAR_STARTER_MON))
    {
        case 0: goto(Sandgem_Town_Proffesor_Rowans_Lab_EventScript_Turtwig)
        case 1: goto(Sandgem_Town_Proffesor_Rowans_Lab_EventScript_Chimchar)
        case 2: goto(Sandgem_Town_Proffesor_Rowans_Lab_EventScript_Piplup)
    }
}

